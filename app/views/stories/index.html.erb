<h1 class='title'>記事一覧</h1>

<% @stories.each do |story| %>
    <div class="content">
        <h2 class="title"> <%= story.title %> </h2>
        <p> <%= story.content %> </p>
        <p> 
            <%= time_ago_in_words(story.updated_at) %>
            <%= link_to '再編集', edit_story_path(story), class: 'button is-outlined is-small' %> 
            <%= link_to '削除', story, method: 'delete', class: 'button is-danger is-small', data: { confirm: '記事を削除します。
よろしいですか？' } %> 

        </p>
    </div>
    <hr>
<% end %>