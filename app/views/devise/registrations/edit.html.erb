<h2 class='title'>アカウント管理 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Eメール, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium' %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :新しいパスワード, class: 'label' %> <i>（変更したくない場合は空白のままにします）</i><br />
    <div class="control has-icons-left">
      <%= f.password_field :password, autocomplete: "new-password", class: 'input is-medium' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> パスワードの最小文字数)</em>
      <% end %><br />
    </div>
  </div>

  <div class="field">
    <%= f.label :新しいパスワード再入力, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-medium' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <%= f.label :現在のパスワード, class: 'label' %>
    <div class="control has-icons-left">
      <%= f.password_field :current_password, autocomplete: "current-password", class: 'input is-medium' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "変更する", class: 'button is-primary is-medium' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "ホームページに戻る", :back %>
